html {
  overflow-x: auto;
  overflow-y: scroll;
  background: #fff;
}

body, dl, dt, dd, ul, ol, li, pre, form, fieldset, input, p, blockquote, th, td {
  font-weight: 400;
  margin: 0;
  padding: 0;
  box-sizing border-box
}

h1, h2, h3, h4, h4, h5 {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

body {
  background: #fff;
//   color: #666666;
  font-family: Helvetica, Arial, sans-serif;
  padding: 0;
  text-align: left;
}

select {
  font-size: 12px;
}

table {
  border-collapse: collapse;
}

fieldset, img {
  border: 0 none;
}

fieldset {
  margin: 0;
  padding: 0;
}

fieldset p {
  margin: 0;
  padding: 0 0 0 8px;
}

legend {
  display: none;
}

address, caption, em, strong, th, i {
  font-style: normal;
  font-weight: 400;
}

table caption {
  margin-left: -1px;
}

hr {
  border-bottom: 1px solid #FFFFFF;
  border-top: 1px solid #E4E4E4;
  border-width: 1px 0;
  clear: both;
  height: 2px;
  margin: 5px 0;
  overflow: hidden;
}

ol, ul {
  list-style-image: none;
  list-style-position: outside;
  list-style-type: none;
}

caption, th {
  text-align: left;
}

q:before, q:after, blockquote:before, blockquote:after {
  content: '';
}
a{
    text-decoration: none;
}

textarea::-webkit-input-placeholder{
    text-align: left;
    color: #999;
}    /* 使用webkit内核的浏览器 */
textarea:-moz-placeholder{
    text-align: left;
    color: #999;
}                  /* Firefox版本4-18 */
textarea::-moz-placeholder{
    text-align: left;
    color: #999;
}                  /* Firefox版本19+ */
textarea:-ms-input-placeholder{
    text-align: left;
    color: #999;
}
